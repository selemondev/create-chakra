{
	"name": "create-chakra",
	"version": "0.1.1",
	"author": "Vedant Nandwana",
	"main": "./lib/index.js",
	"type": "module",
	"exports": "./dist/index.js",
	"description": "âš’ Tool to scaffold chakra apps, without wasting time.",
	"keywords": [
		"chakra",
		"chakra-ui",
		"next",
		"react",
		"nextjs",
		"javascript",
		"typescript"
	],
	"bin": {
		"create-chakra": "./dist/index.js"
	},
	"scripts": {
		"build": "tsup src/index.ts --format esm --clean --sourcemap --minify --metafile",
		"dev": "tsup src/index.ts --format esm --watch --clean --onSuccess \"node dist/index.js\"",
		"start": "node dist/index.js",
		"test": "echo \"Error: no test specified\" && exit 1",
		"release": "standard-version",
		"publish:beta": "pnpm run build && npm publish --tag beta",
		"publish": "pnpm run build && npm publish",
		"lint": "eslint",
		"prepare": "husky install",
		"format": "prettier --write ./src"
	},
	"devDependencies": {
		"@types/chalk": "^2.2.0",
		"@types/clear": "^0.1.2",
		"@types/commander": "^2.12.2",
		"@types/figlet": "^1.5.4",
		"@types/fs-extra": "^9.0.13",
		"@types/inquirer": "^9.0.0",
		"@types/node": "^18.6.4",
		"@types/yargs": "^17.0.11",
		"eslint": "^8.21.0",
		"husky": "^8.0.1",
		"nodemon": "^2.0.19",
		"prettier": "^2.7.1",
		"ts-node": "^10.9.1",
		"tsup": "^6.2.1",
		"typescript": "^4.7.4"
	},
	"dependencies": {
		"chalk": "4.1.2",
		"clear": "^0.1.0",
		"commander": "^9.4.0",
		"figlet": "^1.5.2",
		"fs-extra": "^10.1.0",
		"inquirer": "^9.1.0",
		"ora": "^6.1.2",
		"path": "^0.12.7",
		"yargs": "^17.5.1"
	}
}
